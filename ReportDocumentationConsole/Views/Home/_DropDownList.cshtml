
@model ReportDocumentationConsole.ViewModels.ReportsViewModel
@{
                /**/

                ViewBag.Title = "Home Page";
}



@using (Html.BeginForm("Index", "MainConsole", FormMethod.Post))

{@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<fieldset>
    <legend>Reports</legend>


    <div class="form-group">


        @Html.Label("Report Name")


        @Html.DropDownList("selectedReportName", new SelectList(Model.names), @ViewData["selectedReportName"] == null ? "select report" : ViewData["selectedReportName"].ToString(), new { @class = "custom-select" })
        @Html.Hidden("buttonName", "CH")
        <input type="submit" value="submit" class="btn btn-primary" />
        <button type="button" class="btn btn-primary" id="NewReport"  onclick= "window.location.href='@Url.Action( "AddReportForm", "MainConsole")';">New Report</button>
        
    </div>
</fieldset>
}



<div class="AddReportForm"></div>
