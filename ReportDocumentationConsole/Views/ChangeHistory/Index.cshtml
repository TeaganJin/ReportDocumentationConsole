
@model List<ReportDocumentationConsole.ViewModels.ReportChangeLog>

@{
    ViewBag.Title = "ChangeHistory";
}
@*<h2>ChangeHistory</h2>*@

@{

    Html.RenderAction("_DropDownList", "Home", @ViewData["selectedReportName"].ToString());
}


@Html.Action("_ReportDescription", "MainConsole", new { selectedReportId = @ViewData["selectedReportId"].ToString() })

@Html.Partial("_MainButtons")



@section Scripts{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $(".delete").click(function (e) {
                e.stopPropagation();
                var CurrentEle = $(this);
                var value = $(this).html();
                var row = $(e.target).closest('tr');
                var ChangeHisID = row.find($("[id*=key]")).val();
                DeleteRow(ChangeHisID);
            });

        });
        function DeleteRow(ChangeHisID) {
            var para = {};

            para.ID = ChangeHisID;
            $.ajax({
                type: "POST",
                url: "ChangeHistory/DeleteCH",
                data: '{para: ' + JSON.stringify(para) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    alert("done!! ");
                    location.href = location.href;
                    window.location.reload();
                }

            });
        }
    </script>
}



<div style="max-height: 500px; overflow: auto;">

    <table class="table table-hover">
        <thead>
            <tr>
                @*<th scope="col">ID</th>
                    <th scope="col">SSRSReportId</th>*@
                <th></th>
              
                <th scope="col">@Html.DisplayNameFor(m => m[0].ReportSPName)</th>


                <th scope="col">
                    @Html.DisplayNameFor(m => m[0].RowCreateDate)</th>
                <th scope="col"> @Html.DisplayNameFor(m => m[0].ItComment) </th>

                <th scope="col"> @Html.DisplayNameFor(m => m[0].PublicComment) </th>
                <th scope="col"> @Html.DisplayNameFor(m => m[0].IsRDLChange) </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for(var i = 0; i < Model.Count; i++)
            {
                <tr class="table-primary" width="130">
                @*<th scope="row">Primary</th>*@
                @*<td>@sp.ID</td>
    <td>@sp.SSRSReportId</td>*@
<td>@Html.HiddenFor(modelItem => Model[i].ID, new { id = "key" })</td>
                    <td>@Model[i].ReportSPName</td>
                    <td>@Model[i].RowCreateDate.ToShortDateString()</td>
                    <td display="inline-block">@Model[i].ItComment</td>
                    <td>@Model[i].PublicComment</td>
                    <td>@Model[i].IsRDLChange</td>
                    <td width="40px"><div class="delete"><button class="btn btn-outline-secondary">Delete</button></div></td>
                </tr>
            }
        </tbody>
    </table>

</div>


@Html.Partial("_AddChangeHistory")


