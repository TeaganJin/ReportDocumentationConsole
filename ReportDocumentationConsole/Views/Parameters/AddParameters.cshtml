@model ReportDocumentationConsole.ViewModels.ReportsViewModel
@{
    ViewBag.Title = "AddParameters";
}

@{

    Html.RenderAction("_DropDownList", "Home", @ViewData["selectedReportName"].ToString());
}


@Html.Partial("_MainButtons")
<h3>AddParameters</h3>
<div class="form-group">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @using (Html.BeginForm("AddParametersResult", "Parameters", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        <fieldset>
            @*<label class="col-form-label" for="SSRSReportId">SSRSReportId</label>
                @Html.TextBox("SSRSReportId", null, new { @class = "form-control" })*@
            @*<input class="form-control" id="SSRSReportId" placeholder="SSRSReportId here…" type="text">*@
            @Html.Hidden("selectedReportId", @ViewData["selectedReportId"])
            @Html.Hidden("selectedReportName", @ViewData["selectedReportName"])

            <label class="col-form-label" for="ReportSPName">ReportSPName*</label>
            @Html.DropDownList("ReportSPName", new SelectList(Model.names), null, new { @class = "form-control" })
            @*@Html.TextBox("ReportSPId", null, new { @class = "form-control" })*@


            <label class="col-form-label" for="RDLParameterName">RDLParameterName</label>
            @Html.TextBox("RDLParameterName", null, new { @class = "form-control" })

            <label class="col-form-label" for="ParameterName">ParameterName*</label>
            @Html.TextBox("ParamDescription", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "ParamDescription is required" })


            <label class="col-form-label" for="IsUserControlled">IsUserControlled*</label>
            <div class="custom-control custom-radio">
                @Html.RadioButton("IsUserControlled", "Yes", new { @class = "custom-control", @checked = true, id = "IsUserControlled" })
                @Html.Label("Yes", "Yes")
                @Html.RadioButton("IsUserControlled", "No", new { @class = "custom-control", id = "IsUserControlled" })
                @Html.Label("No", "No")
                @*@Html.TextBox("IsUserControlled", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "IIsUserControlled is required" })*@
            </div>


            <label class="col-form-label" for="UserControllType">UserControlType</label>
            @Html.TextBox("UserControlType", null, new { @class = "form-control", id = "UserControlType" })

            <script type="text/javascript">
            $("input[type='radio']").change(function () {

                if ($(this).val() == "Yes") {
                    //$("#UserControlType").show();
                    $("#UserControlType").val('');
                    $("#UserControlType").attr("disabled", false);

                }
                else {
                    //$("#UserControlType").hide();
                    $("#UserControlType").attr("disabled", true);
                }

            });
            </script>

            @*<script type="text/javascript">
                    $(document).ready(function () {
                        $("#IsUserControlled").change(function () {
                            var selectedRadio = $("#IsUserControlled").val();
                            if (selectedRadio == 'Yes') {
                                $("#UserControlType").attr("disabled", false);
                            } else {
                                $("#UserControlType").attr("disabled", true);
                            }
                        });
                    }

                </script>*@

            <label class="col-form-label" for="IsSetValue">IsSetValue*</label>
            <div class="custom-control custom-radio">
                @Html.RadioButton("IsSetValue", "Yes", new { @class = "custom-control", @checked = true, @id = "IsSetValue" }) Yes
                @*@Html.Label("Yes", "Yes")*@
                @Html.RadioButton("IsSetValue", "No", new { @class = "custom-control", @id = "IsSetValue" }) No
                @*@Html.Label("No", "No")*@
                @*@Html.TextBox("IsSetValue", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "IsSetValue is required" })*@
            </div>
            <label class="col-form-label" for="DefaultValue">DefaultValue*</label>
            @Html.TextBox("DefaultValue", null, new { @class = "form-control valid", @data_val = "true", @data_val_required = "DefaultValue is required" })

            <script type="text/javascript">
            $("input[name='IsSetValue']").change(function () {

                if ($(this).val() == "Yes") {
                    //$("#UserControlType").show();
                    $("#DefaultValue").attr("disabled", false);
                }
                else {
                    //$("#UserControlType").hide();
                    $("#DefaultValue").attr("disabled", true);
                }

            });
            </script>

            <label class="col-form-label" for="AdditionalInfo">AdditionalInfo</label>
            @Html.TextBox("AdditionalInfo", null, new { @class = "form-control" })

            <label class="col-form-label" for="CreatedEndUser">CCreatedEndUser*</label>
            @Html.DropDownList("CreatedEndUser", new SelectList(Model.names2), null, new { @class = "form-control" })
            @*@Html.TextBox("CreateEndUserId", null, new { @class = "form-control" })*@

            <input type="submit" value="submit" class="btn btn-primary" />
        </fieldset>
    }
</div>

